<%- include('../layouts/header.ejs') %>
<%- include('../users/userHeader.ejs') %>

<main class="main h-auto mb-5 d-flex justify-content-center">

    <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17 mt-2 mx-5 w-75 mb-4 d-flex justify-content-center"
      style="background-image: url('/img/login-bg.jpg');
">
        <div class="bg-white p-3 p-md-5 my-5 w-50 w-md-75"> 
            <!-- Display Welcome Message -->
            <% if (message && message.welcome) { %>
                <div class="alert alert-success" role="alert">
                    <%= message.welcome %>
                </div>
            <% } %>

            <% if (message && message.error) { %>
                <div class="alert alert-danger" role="alert">
                    <%= message.error %>
                </div>
            <% } %>

            <!-- Pills navs -->
            <ul class="nav border  border-dark border-2 nav-justified mb-3 bg-white" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active font-weight-bold text-dark" id="tab-login" data-mdb-toggle="pill"
                        href="/" role="tab" aria-controls="pills-login" aria-selected="true">Login</a>
                </li>
                <li class="nav-item color-01 text-white" role="presentation">
                    <a class="nav-link" id="tab-register" data-mdb-toggle="pill" href="" role="tab"
                        aria-controls="pills-register" aria-selected="false">Register</a>
                </li>
            </ul>

            <!-- Pills content -->
            <div class="tab-content">
                <!-- Login tab -->
                <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                    <!-- Login form content -->
                </div>

                <!-- Register tab -->
                <div class="tab-pane fade show active" id="pills-register" role="tabpanel"
                    aria-labelledby="tab-register">
                    <!-- Register form content -->
                    <form action="/signup" method="post">
                        <div class="text-center mb-3">
                            <p>Sign up with:</p>
                            <button type="button" class="btn  btn-floating mx-1">
                                <i class="fab fa-facebook-f"></i>
                            </button>

                            <button type="button" class="btn  btn-floating mx-1">
                                <i class="fab fa-google"></i>
                            </button>

                            <button type="button" class="btn  btn-floating mx-1">
                                <i class="fab fa-twitter"></i>
                            </button>

                            <button type="button" class="btn  btn-floating mx-1">
                                <i class="fab fa-github"></i>
                            </button>
                        </div>

                        <p class="text-center">or:</p>

                        <!-- Name input -->
                        <div class="form-outline mb-4 required">
                            <label class="form-label" for="name">Name</label>
                            <input type="text" id="name" class="form-control" name="name" />
                            <% if (message && message.name) { %>
                                <small class="text-danger"><%= message.name %></small>
                            <% } %>
                        </div>

                        <!-- Username input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="email">Email</label>
                            <input type="email" id="email" class="form-control" name="email" />
                            <% if (message && message.email) { %>
                                <small class="text-danger"><%= message.email %></small>
                            <% } %>
                        </div>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="phone">Phone</label>
                            <input type="tel" id="phone" class="form-control" name="phone" />
                            <% if (message && message.phone) { %>
                                <small class="text-danger"><%= message.phone %></small>
                            <% } %>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="Password">Password</label>
                            <input type="password" id="Password" class="form-control" name="password" />
                            <% if (message && message.password) { %>
                                <small class="text-danger"><%= message.password %></small>
                            <% } %>
                        </div>

                        <div class="form-outline mb-4">
                            <label class="form-label" for="referralCode">Referral Code</label>
                            <input type="text" id="referralCode" class="form-control" name="referralCode" />
                            <% if (message && message.referralCode) { %>
                                <small class="text-danger"><%= message.referralCode %></small>
                            <% } %>
                        </div>

                        <!-- Submit button -->
                        <button data-id="signInBtn" type="submit" class="btn btn-dark btn-block mb-3">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../users/userFooter.ejs') %>
<script src="/js/user/removeResendData.js"></script>
<%- include('../layouts/footer.ejs') %>
