<%- include('../layouts/header.ejs') %>
<%- include('../users/userHeader.ejs') %>

<main class="main h-auto mb-5 d-flex justify-content-center">
    <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17 mt-2 mx-5 w-75 mb-4 d-flex justify-content-center"
      style="background-image: url('/img/login-bg.jpg');
">

        <div class="bg-white p-3 p-md-5 my-5 w-50 w-md-75">
            <!-- Display Welcome Message -->
            <% if (message && message.welcome) { %>
            <div class="alert alert-success" role="alert">
                <%= message.welcome %>
            </div>
            <% } %>


            <% 
            var isLoginPage = true; // Set this based on your condition
            var backgroundColorClass = isLoginPage ? 'bg-black' : 'bg-blue';  %>

            <!-- Pills navs -->
            <ul class="nav border border-dark border-2 nav-justified mb-3 bg-white" id="ex1" role="tablist">
                <li class="nav-item <%= isLoginPage ? 'bg-dark' : '' %>" role="presentation">
                    <a class="nav-link <%= isLoginPage ? 'text-white font-weight-bold' : 'text-dark font-weight-bold' %>"
                        id="tab-login" data-mdb-toggle="pill" href="/" role="tab" aria-controls="pills-login"
                        aria-selected="true">Login</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link text-dark font-weight-bold" id="tab-register" data-mdb-toggle="pill"
                        href="/signup" role="tab" aria-controls="pills-register" aria-selected="false">Register</a>
                </li>
            </ul>

            <!-- Pills content -->
            <div class="tab-content">
                <!-- Login tab -->
                <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                    <!-- Login form content -->
                    <form action="/" method="post">
                        <div class="text-center mb-3">
                            <p>Sign in with:</p>
                            <button type="button" class="btn btn-floating mx-1">
                                <i class="fab fa-facebook-f"></i>
                            </button>
                            <button type="button" class="btn btn-floating mx-1">
                                <i class="fab fa-google"></i>
                            </button>
                            <button type="button" class="btn btn-floating mx-1">
                                <i class="fab fa-twitter"></i>
                            </button>
                            <button type="button" class="btn btn-floating mx-1">
                                <i class="fab fa-github"></i>
                            </button>
                        </div>

                        <p class="text-center">or:</p>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="loginName">Email or username</label>
                            <input type="email" id="loginName" class="form-control" name="email" />
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="loginPassword">Password</label>
                            <input type="password" id="loginPassword" class="form-control" name="password" />
                        </div>

                        <!-- Forgot password link -->
                        <div class="row mb-4">
                            <div class="col-md-12 text-center">
                                <a data-id="forgotPasswordBtn" class="text-secondary" href="/forget">Forgot
                                    password?</a>
                            </div>
                        </div>

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-dark btn-block mb-4">Sign in</button>

                        <!-- Register buttons -->
                        <div class="text-center">
                            <p>Not a member? <a href="/signup">Register</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../users/userFooter.ejs') %>
<script src="/js/loginPageBtn.js"></script>
<%- include('../layouts/footer.ejs') %>
 